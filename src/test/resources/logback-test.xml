<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ISO8601} [%p] %logger - %msg%n</pattern>
		</encoder>
	</appender>
	<appender class="ch.qos.logback.core.FileAppender" name="FILE">
		<File>red5-client.log</File>
		<Append>false</Append>
		<encoder>
			<pattern>%d{ISO8601} [%thread] %-5level %logger{35} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<root>
		<level value="DEBUG" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</root>
	<logger name="org.red5">
		<level value="DEBUG" />
	</logger>
	<logger name="org.red5.client">
		<level value="TRACE" />
	</logger>
	<logger name="org.red5.io">
		<level value="DEBUG" />
	</logger>
	<logger name="org.red5.server.util">
		<level value="INFO" />
	</logger>
	<logger name="org.red5.server.net">
		<level value="TRACE" />
	</logger>
	<logger name="net.sf.ehcache">
		<level value="INFO" />
	</logger>
</configuration>
